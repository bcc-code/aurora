{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
		"target": "es2019",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [ "src/*.ts" ]
}
