{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "lint": "tslint --project tsconfig.json",
        "setup": "firebase use --add",
        "build": "parcel build --target default src/index.ts --detailed-report",
        "debug": "firebase emulators:start --only functions --inspect-functions",
        "watch": "parcel watch --target default src/index.ts",
        "serve": "firebase emulators:start --only functions --inspect-functions",
        "predeploy": "npm run build",
        "deploy": "firebase deploy --only functions"
    },
    "targets": {
        "default": {
            "context": "node",
            "engines": {
                "node": "12"
            }
        }
    },
    "engines": {
        "node": "12"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "main": "dist/index.js",
    "dependencies": {
        "@babel/plugin-transform-runtime": "^7.13.15",
        "@babel/preset-typescript": "^7.13.0",
        "@firebase/app": "^0.6.21",
        "@google-cloud/logging-bunyan": "^3.0.2",
        "@parcel/transformer-typescript-tsc": "^2.0.0-alpha.3",
        "@types/child-process-promise": "^2.2.1",
        "@types/express-serve-static-core": "^4.17.19",
        "@types/passport": "^1.0.6",
        "@types/uuid": "^8.3.0",
        "bunyan": "^1.8.15",
        "child-process-promise": "^2.2.0",
        "cookie-session": "^1.4.0",
        "cors": "^2.8.4",
        "express": "^4.17.1",
        "express-jwt": "^5.3.3",
        "firebase-admin": "^9.7.0",
        "firebase-functions": "^3.13.2",
        "firebase-tools": "^9.10.1",
        "gaxios": "^4.2.1",
        "grpc": "^1.24.9",
        "i18n-iso-countries": "^6.7.0",
        "jwks-rsa": "^1.12.3",
        "lodash": "^4.17.21",
        "node-cache": "^5.1.2",
        "parcel": "^2.0.0-beta.2",
        "passport": "^0.4.1",
        "passport-auth0": "^1.4.0",
        "uuid": "^7.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.12.0",
        "@babel/preset-flow": "^7.13.13",
        "@firebase/app-types": "^0.3.9",
        "@types/bunyan": "^1.8.6",
        "@types/express": "4.17.11",
        "@types/cookie-session": "^2.0.42",
        "@types/cors": "^2.8.10",
        "@types/passport-auth0": "^1.0.4",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "eslint": "7",
        "eslint-plugin-promise": "^4.3.1",
        "firebase-functions-test": "^0.1.6",
        "prettier": "2.2.1",
        "typescript": "^3.9.9"
    },
    "private": true
}
